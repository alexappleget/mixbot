generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SignatureDrink {
  id String @id @default(cuid())
  name String @unique
  ingredients String[]
  instructions Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommonCocktail {
  id String @id @default(cuid())
  name String @unique
  ingredients String[]
  instructions Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id String @id @default(cuid())
  signatureDrinks Json
  wines String[]
  beers String[]
  commonCocktails Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}